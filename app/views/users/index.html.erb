<div class="back-ground ">
	<div class="main-space">
		<div class="section-head">
				<h3>ユーザー検索</h3>
			</div>
		<table class="table table-hover">
			<tr>
			  <th></th>
			  <th>なまえ</th>
			  <th>野宿回数</th>
			</tr>
		<% @user.each do |user| %>
			<tr>
			  <td>
			  	<%= link_to user_path(user) do %>
			  	<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no.jpg', :size => '50x50' %>
			  		<% end %>
			  	</td>
			  <td><%= user.nick_name %></td>
			  <td><%= user.slepts.count %></td>
			</tr>
		<% end %>
		</table>
			<div class="page-space">
		   	<%= paginate @user %>
		</div>
	</div>
</div>