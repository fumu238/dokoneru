<div class="back-ground">
    <div class="main-space">
      <div class="container">
        <div class="section-head">
            <h4>ユーザー登録</h4>
           </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
              <div class="form-group">
                  <label class="control-label col-xs-2">名前　<span class="red">※必須</span></label>
                  <div class="col-xs-5">
                    <%= f.text_field :user_name, class: "form-control" %>
                  </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-xs-2">ふりがな　<span class="red">※必須</span></label>
                  <div class="col-xs-5">
                    <%= f.text_field :name_phonetic, class: "form-control" %>
                  </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-xs-2">ニックネーム　<span class="red">※必須</span></label>
                  <div class="col-xs-5">
                    <%= f.text_field :nick_name, class: "form-control" %>
                  </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-xs-2">メールアドレス　<span class="red">※必須</span></label>
                  <div class="col-xs-5">
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>
              </div>
              <div class="form-group">
                 <% if @minimum_password_length %>
                  <label class="control-label col-xs-2">パスワード</label>
                    (<%= @minimum_password_length %> 文字以上にしてください)
                  <div class="col-xs-5">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    <% end %>
                  </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-xs-2">パスワード（確認用）</label>
                  <div class="col-xs-5">
                   <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
                  </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-xs-5"></label>
                  <div class="col-xs-2">
                   <%= f.submit "登録" ,class: "btn btn-outline-info"%>
                  </div>
              </div>
              <% end %>
        </div>
    </div>
</div>