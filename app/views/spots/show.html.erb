<div class="back-ground">
	<div class="main-space">
		<%= render "layouts/flash" %>
		<div class="section-head clearfix">
			<div class="head-user">
				投稿者　<%= link_to user_path(@spot_user),:style => "color:#99cc99" do %>
				<%= @spot.user.nick_name %>
				<% end %>
				さん
			  </div>
			<h3><%= @spot.spot_name %></h3>
			<h4><%= @spot.prefecture.prefecture_name %></h4>
		</div>

		<div class="content-space clearfix">
<!-- favorite--------------------------------------------- -->
		  <div class="favorite-box">
		   	<span id="favorite<%= @spot.id %>">
           		<%= render partial: 'favorite', locals: {spot: @spot} %>
         	</span>
		 </div>
		 <div class="favorite-box">
			<span id="slept<%= @spot.id %>">
           		<%= render partial: 'slept', locals: {spot: @spot} %>
         	</span>
		  </div>
<!-- --------------------------------------------------- -->
		</div>

		  <div class="content-space clearfix">
			<div class="spot-h3">
			    画像ギャラリー
			  </div>
				<div class="edit-button">
				 	<%= link_to "画像投稿", new_spot_spot_image_path(@spot), class: "btn btn-outline-warning" %>
				  </div>
				  	<% if @spot.spot_images.blank? %>
				  	 	<div class="no-comment">
				  			画像を投稿しませんか?
				  		</div>
				  	<% end %>
				  <% @spot.spot_images.each do |spot_image| %>
				   <div class="spot-image-box">
			 	     <div class="spot-image">
			 	     	<%= attachment_image_tag spot_image, :image, :fill, 360, 270 , format: 'jpeg' %>
			       </div>
			     ○<%= spot_image.image_discription %>
			  </div>
			  <% end %>
		</div>
		  <div class="content-space clearfix">
			<div class="spot-h3">
		  		スポット特徴
			 </div>
			 <div class="edit-button">
				 	<%= link_to "編集する", edit_spot_path, class: "btn btn-outline-warning" %>
				 </div>

<%= render 'info' , spot: @spot %>

		  </div>
		 <div class="content-space clearfix">
		 	<div class="spot-h3">
		  		スポット投稿者コメント
			   </div>
			    <div class="discription">
			      <%= @spot.discription %>
			    </div>
		   </div>

		 <div class="content-space clearfix">
		 	<div class="spot-h3">
		 		自由コメント欄
		 	</div>

		 <% if @spot.post_comments.count == 0 %>
		 	  <div class="no-comment">
		 		コメントしませんか？
		 <% elsif @spot.post_comments.count >= 3 %>
			     <div class="comment-scroll">
		 <% else %>
			    <div>
	 	 <% end %>
	          <% @spot.post_comments.reverse.each do |post| %>
	    		<div class="comment-user">
	    			<%= link_to user_path(post.user),:style => "color:gray" do %>
	    			<%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no.jpg', :size => '40x40' %>
  					<%= post.user.nick_name %><br>
  					<% end %>
  					<div class="comment-content">
  					   <%= post.comment %>
  					 </div>
  			    </div>
  			     <% if admin_signed_in? || post.user == current_user %>
  			      	<div class="comment-delete">
  			          <%= link_to "削除",spot_post_comments_path(@spot),method: :delete, class: "btn btn-outline-danger",data:{confirm: '削除しますか?' } %>
  			       </div>
  			     <% end %>
	     	  <% end %>
			 </div>
		</div>
<%= render 'comment' ,spot: @spot ,post_comment: @post_comment %>
			<div class="open">コメントする</div>

		 <div class="content-space clearfix">
		 	<div class="spot-h3">
		  		スポット基本情報
			   </div>
			  <div class="spot-basis-info">
			  	<%= @spot.spot_name %><br>
			  	<%= @spot.area.area_name %><br>
			  	<%= @spot.prefecture.prefecture_name %><br>
			  	住所：<a href="http://maps.google.co.jp/maps?q=<%= @spot.spot_address %>" target="_blank"><%= @spot.spot_address %></a>
			  </div>
		   </div>

		 <div class="content-space clearfix">
		 	<%= link_to "TOP", root_path, :style => "color:gray" %>
		 	 > 
		 	<%= link_to "都道府県から探す", areas_path, :style => "color:gray" %>
		 	 > 
		 	 <%= link_to @spot.prefecture.prefecture_name, areas_prefecture_path(@spot.prefecture.prefecture_name), :style => "color:gray" %>
		 	 > 
		 	 <%= @spot.spot_name %>
		 </div>
		 <% if admin_signed_in? %>
		 <%= link_to "投稿削除",spot_path(@spot), method: :delete ,class: "btn btn-outline-danger",data:{confirm: '削除しますか?' } %>
		 <% end %>
	</div>
</div>