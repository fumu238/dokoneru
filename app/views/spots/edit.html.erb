<div class="back-ground">
	<div class="main-space">
		<div class="section-head">
			<h3>ネドコ編集</h3>
		　</div>
		　　　<div class="container">
               	 <%= form_for @spot do |f| %>
        			<div class="form-group">
		           		<label>野宿スポット名</label>
		            	<%= f.text_field :spot_name, class: 'form-control' %>
		        	</div>
		        	<div class="form-group">
		        		<label>エリア</label>
	            		<%= f.collection_select :area_id, @area, :id, :area_name , class: "form-control", prompt: "選択する" %>
		        	 </div>
		        	<div class="form-group">
		        		<label>都道府県</label>
		            	<%= f.collection_select :prefecture_id, @prefecture, :id, :prefecture_name, prompt: "選択する"%>
		        	  </div>
		        	  <div class="form-group">
		           	 <label>ネドコタイプ</label>
		            	<%= f.select :type, [["公園", "公園"], ["道の駅", "道の駅"],["無料キャンプ場","無料キャンプ場"],["その他","その他"]], prompt: "選択する"%>
			        </div>
		        	<div class="form-group">
		           	 <label>スポット住所</label>
		            	<%= f.text_field :spot_address, class: 'form-control' %>
			        </div>
			        <div class="form-group">
			            <label>説明文</label>
		            	<%= f.text_area :discription, class: 'form-control' %>
			        </div>
			        <div class="form-group">
	            		<label>東屋の有無</label>
		            	<%= f.text_field :pavilion, class: 'form-control' %>
	        		</div>
			        <div class="form-group">
	            		<label>独立水道の有無</label>
		            	<%= f.text_field :watar, class: 'form-control' %>
	        		</div>
	        		<div class="form-group">
	            		<label>トイレの有無</label>
		            	<%= f.text_field :toilet, class: 'form-control' %>
	        		</div>
	        		<div class="form-group">
	            		<label>屋根の有無</label>
		            	<%= f.text_field :roof, class: 'form-control' %>
	        		</div>
	        		<div class="form-group">
	            		<label>24時間休憩所の有無</label>
		            	<%= f.text_field :rest_area, class: 'form-control' %>
	        		</div>
	        		<%= f.submit "編集する",class: "btn btn-outline-info" %>
        		<% end %>
			</div>
	</div>
</div>