<div class="back-ground ">
	<div class="main-space">
		<div class="section-head">
            <h3>ネドコ検索</h3><br>
            <div class="reslut">
            	"<%= @words %>"の検索結果 <%= @spots.count %>件
            </div>
           <div class="search">
            さらに条件で絞り込む

            <%= search_form_for @q ,url: spots_search_path ,html:{class: 'form-inline'} do |f| %>
            <div class="container">
	            <div class="form-group">
	            タイプ
		            <label>道の駅</label>
		            <%= f.radio_button :type_eq ,"道の駅"%>
		            <label>公園</label>
		            <%= f.radio_button :type_eq ,"公園"%>
		            <label>無料キャンプ場</label>
		            <%= f.radio_button :type_eq ,"無料キャンプ場"%>
		        </div>
		        <div class="form-group">
		        	東屋
		        	 <label>あり</label>
		            <%= f.radio_button :pavilion_eq ,"あり"%>
		            <label>なし</label>
		            <%= f.radio_button :pavilion_eq ,"なし"%>
		        </div>
		        <div class="form-group">
		        	24時間休憩所
		        	 <label>あり</label>
		            <%= f.radio_button :rest_area_eq ,"あり"%>
		            <label>なし</label>
		            <%= f.radio_button :rest_area_eq ,"なし"%>
		        </div>


	            <div class="form-group">
			            <%= f.text_field :spot_name_or_spot_address_or_area_area_name_or_prefecture_prefecture_name_cont, class: "search-form form-control",:size => '70', placeholder: 'ネドコを探す' %>
		            	<%= f.submit "検索", class: 'btn btn-outline-success' %>
		         <% end %>
                </div>
            </div>
           </div>
        </div>
	          <% @spots.each do |spot| %>
		  	     <%= link_to spot_path(spot), :style=>"text-decoration: none;" do %>
			 <div class="main-content clearfix">
				  <% spot.spot_images.first(1).each do |spot_image| %>
				<div class="index-image">
					<%= attachment_image_tag spot_image, :image, :fill, 240, 180 , format: 'jpeg' %>
				 </div>
				   <% end %>
					<h4><%= spot.spot_name %></h4>
					<p><%= spot.prefecture.prefecture_name %></p>
					<p><%= spot.spot_address %></p>
					<p>タイプ：<%= spot.type %></p>
					<p>[<%= spot.discription %>]</p>
			 </div>
				<% end %>
			  <% end %>

		   <div class="page-space">
		   	①②③
		</div>
	</div>
</div>